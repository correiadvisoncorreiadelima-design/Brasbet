<script>
let saldoInicial = 1000;
let saldo = 0;

function hoje() {
  return new Date().toLocaleDateString();
}

function login() {
  let ultimoAcesso = localStorage.getItem("dataDemo");

  if (ultimoAcesso !== hoje()) {
    saldo = saldoInicial;
    localStorage.setItem("saldoDemo", saldo);
    localStorage.setItem("dataDemo", hoje());
  } else {
    saldo = Number(localStorage.getItem("saldoDemo")) || saldoInicial;
  }

  document.getElementById("saldo").innerText = saldo;
  document.getElementById("loginBox").classList.add("hidden");
  document.getElementById("cassinoBox").classList.remove("hidden");
}

function apostar() {
  let valor = Number(document.getElementById("aposta").value);
  let res = document.getElementById("resultado");

  if (valor <= 0 || valor > saldo) {
    res.innerHTML = "‚ùå Aposta inv√°lida.";
    res.style.color = "red";
    return;
  }

  let ganhou = Math.random() < 0.45;

  if (ganhou) {
    saldo += valor;
    res.innerHTML = "‚úÖ Vit√≥ria! Voc√™ ganhou R$ " + valor;
    res.style.color = "#00ff88";
  } else {
    saldo -= valor;
    res.innerHTML = "‚ùå Derrota! Voc√™ perdeu R$ " + valor;
    res.style.color = "#ff4444";
  }

  document.getElementById("saldo").innerText = saldo;
  localStorage.setItem("saldoDemo", saldo);
}

function bonusVip() {
  saldo += 500;
  document.getElementById("saldo").innerText = saldo;
  localStorage.setItem("saldoDemo", saldo);
  alert("üéâ B√¥nus VIP Demo de R$ 500 creditado!");
}
